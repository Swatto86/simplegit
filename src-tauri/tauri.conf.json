{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:5173",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "SimpleGit",
    "version": "1.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true,
        "sidecar": false,
        "scope": []
      },
      "dialog": {
        "all": true,
        "ask": true,
        "confirm": true,
        "message": true,
        "open": true,
        "save": true
      },
      "fs": {
        "all": true,
        "readFile": true,
        "writeFile": true,
        "readDir": true,
        "exists": true,
        "scope": ["$HOME/.simplegit/**", "$HOME/simplegit/**"]
      },
      "path": {
        "all": true
      },
      "protocol": {
        "asset": true,
        "assetScope": ["$APPDATA/**"]
      },
      "http": {
        "all": false,
        "request": true,
        "scope": ["https://github.com/*", "https://api.github.com/*"]
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "Â©2024 SimpleGit",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.simplegit.dev",
      "longDescription": "A modern, lightweight Git client built with Tauri, React, and TypeScript",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "publisher": "Swatto",
      "shortDescription": "Simple Git Client",
      "targets": ["app", "appimage", "deb", "dmg", "msi", "updater"],
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "wix": {
          "language": "en-US"
        }
      }
    },
    "security": {
      "csp": "default-src 'self' asset: https://asset.localhost https://github.com https://api.github.com http://localhost:*"
    },
    "updater": {
      "active": false
    },
    "systemTray": {
      "iconPath": "icons/icon.ico",
      "iconAsTemplate": true
    },
    "windows": [
      {
        "title": "SimpleGit v1.0.0",
        "width": 2001,
        "height": 1339,
        "minWidth": 2001,
        "minHeight": 1339,
        "center": true,
        "visible": false,
        "decorations": false,
        "transparent": true,
        "label": "main"
      }
    ]
  }
}
